<p id="notice"><%= notice %></p>
<h1>Manage password of event <%= @event.name %></h1>

<div class="container">
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<strong><%= link_to 'Unset password', delete_pw_path, method: :delete, data: { confirm: 'Are you sure?' } %></strong> 
</div>

